<script>
    function alpha(letter)
    {
        if(letter=="Clear")
        {
           document.getElementById('mainText').value=null;
        }
        else if(letter=="Backspace")
        {
          document.getElementById('mainText').value=document.getElementById('mainText').value.substring(0, document.getElementById('mainText').value.length - 1);
        }
        else if(letter == "Space")
        {
            document.getElementById('mainText').value=document.getElementById('mainText').value+" ";
        }
        else
        {
            document.getElementById('mainText').value=document.getElementById('mainText').value+letter;
        }
    }
   
</script>
